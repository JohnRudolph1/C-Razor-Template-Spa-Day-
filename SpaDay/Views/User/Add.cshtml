<form method="post" action="/user/add" autocomplete="off">
    <div>
        <h3>Username</h3>
        <input name="username" type="text" placeholder="Enter Username" /><br />
    </div>
    <div>
        <h3>Password</h3>
        <input name="password" type="password" placeholder="Enter Password" /><br />
    </div>
    <div>
        <h3>Verify Password</h3>
        <input name="verify" type="password" placeholder="Verify Password" /><br />
    </div>
    <div>
        <h3>Email</h3>
        <input name="email" type="email" placeholder="Enter Email" /><br />
    </div>
    <input type="submit" name="submit" value="Sign Up" />
</form>